class Ordenadora:
    def __init__(self, listaBaguncada):
        self.listaBaguncada = listaBaguncada  # Atributo que armazena a lista

    def ordenacaoCrescente(self):
        return sorted(self.listaBaguncada)  # Retorna a lista ordenada em ordem crescente

    def ordenacaoDecrescente(self):
        return sorted(self.listaBaguncada, reverse=True)  # Retorna a lista ordenada em ordem decrescente


# Instanciando os objetos
crescente = Ordenadora([3, 4, 2, 1, 5])
decrescente = Ordenadora([9, 7, 6, 8])

# Usando os métodos de ordenação
resultado_crescente = crescente.ordenacaoCrescente()
resultado_decrescente = decrescente.ordenacaoDecrescente()

# Imprimindo os resultados
print(resultado_crescente)  # Resultado da ordenação crescente
print(resultado_decrescente)  # Resultado da ordenação decrescente
